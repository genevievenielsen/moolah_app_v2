<h1>Listing size_options</h1>

<table>
  <thead>
    <tr>
      <th>Size</th>
      <th>Item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @size_options.each do |size_option| %>
      <tr>
        <td><%= size_option.size %></td>
        <td><%= size_option.item_id %></td>
        <td><%= link_to 'Show', size_option %></td>
        <td><%= link_to 'Edit', edit_size_option_path(size_option) %></td>
        <td><%= link_to 'Destroy', size_option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

