<div class="row">
  <div class="col-md-4">
    <img class="img-rounded img-responsive center-block club" width="200px" height="200px" src="<%= @club.image %>">
  </div>

  <div class="col-md-4 border-left border-right">
    <div class="text-center dark_gray_text">
        <h2 class="dark_gray_text"><%= @club.name %></h2>
        <h5><%= @club.description %></h5>

        <% if @club.members.include?(current_user)  %>
            <%= render 'memberships/unjoin_button', :club => @club %>
        <% else %>
            <%= render 'memberships/join_button', :club => @club %>
        <% end %>

        <% if @club.owner == current_user  %>
          <div class="text-center">
            <%= link_to "Import Club Email List", club_emails_url(@club) %><br>
            <%= link_to "View Leadership", leadership_url(@club) %>
          </div>
        <% end %>
        <br>
    </div>
  </div>

  <div class="col-md-4">
    <% if current_user == @club.owner %>
      <div class="pull-right">
        <%= link_to "<i class=\"fa fa-pencil-square-o\"></i>".html_safe, edit_club_path(@club), :class => "btn btn-xs btn-default edit_button" %>
        <%= link_to "<i class=\"fa fa-times\"></i>".html_safe, club_url(@club), method: :delete, :class => "btn btn-xs btn-default edit_button", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <div class="text-center">
      <br>
      <br>
      <br>
      <%= link_to 'Add New Item', new_item_path, :class => "btn btn-md btn-primary home_button" %>
      <br>
      <br>
      <br>
    </div>
  </div>
</div>

<br>
<br>
<%= render "clubs/items_club_display" %>
