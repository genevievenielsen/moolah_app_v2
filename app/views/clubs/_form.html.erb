<%= form_for(@club) do |f| %>
  <% if @club.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@club.errors.count, "error") %> prohibited this club from being saved:</h2>

      <ul>
      <% @club.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
  <div class="col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6">

  <div class="form-group">
    <%= f.label :name, :class => "control-label" %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "control-label" %>
    <%= f.text_area :description, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image, :class => "control-label" %>
    <%= f.file_field :image, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :university_id, :class => "control-label" %>
    <%= f.select( :university_id, options_from_collection_for_select(University.all,
    "id", "name", @club.university_id), {prompt: "Select a University"}, {class: "form-control"}) %>
  </div>

  <div class="form-group">
    <%= f.label :website, :class => "control-label" %>
    <%= f.text_field :website, :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-default"%>
  </div>

  </div>
  </div>
<% end %>
