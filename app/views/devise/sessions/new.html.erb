<%#= link_to "Sign in with Venmo", user_omniauth_authorize_path(:venmo) %>
  <div class="col-sm-6 col-md-offset-2 col-md-4">
  <br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class = "form-group">
        <%= f.label :email, :class => "explanation" %>
        <%= f.email_field :email, autofocus: true, :class => "form-control" %>
      </div>

      <div class = "form-group">
        <%= f.label :password, :class => "explanation" %>
        <%= f.password_field :password, autocomplete: "off", :class => "form-control"  %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class = "form-group">
          <%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "explanation" %>
        </div>
      <% end -%>

      <div><%= f.submit "Sign in", :class => "btn btn-default sign_in_button pull-right" %></div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>

