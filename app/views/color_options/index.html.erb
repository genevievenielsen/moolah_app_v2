<h1>Listing color_options</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>Item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @color_options.each do |color_option| %>
      <tr>
        <td><%= color_option.color %></td>
        <td><%= color_option.item_id %></td>
        <td><%= link_to 'Show', color_option %></td>
        <td><%= link_to 'Edit', edit_color_option_path(color_option) %></td>
        <td><%= link_to 'Destroy', color_option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Color option', new_color_option_path %>
