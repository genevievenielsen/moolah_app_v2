$('#remove_from_cart_<%= @selected_item.item.id %>').fadeOut(function() {
  $(this).replaceWith('<%= j(render('items/add_to_cart_button', :item => @selected_item.item, :cart => @selected_item.cart)) %>');

  //show page
  $('.color_selected').html('<%= j(render('items/color_unselected_show', :@item => @selected_item.item)) %>');
  $('.color_unselected').html('<%= j(render('items/color_unselected_show', :@item => @selected_item.item)) %>');

  $('.size_selected').html('<%= j(render('items/size_unselected_show', :@item => @selected_item.item)) %>');
  $('.size_unselected').html('<%= j(render('items/size_unselected_show', :@item => @selected_item.item)) %>');

  //index page
  $('.color_selected_<%= @selected_item.item.id %>').html('<%= j(render('items/color_unselected_index', :item => @selected_item.item)) %>');
  $('.color_unselected_<%= @selected_item.item.id %>').html('<%= j(render('items/color_unselected_index', :item => @selected_item.item)) %>');

  $('.size_selected_<%= @selected_item.item.id %>').html('<%= j(render('items/size_unselected_index', :item => @selected_item.item)) %>');
  $('.size_unselected_<%= @selected_item.item.id %>').html('<%= j(render('items/size_unselected_index', :item => @selected_item.item)) %>');

});
