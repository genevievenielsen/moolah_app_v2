<h1>My Items</h1>

<div class="row">
<div class="col-md-10 pull-left">
  <ul class="nav nav-tabs" role="tablist">
    <li class="active"><a data-toggle="tab" href="#items_to_pay_for">Items to Pay For</a></li>
    <li><a data-toggle="tab" role="tab" href="#purchased_items">Purchased Items</a></li>
    <li><a data-toggle="tab" role="tab" href="#items_for_sale">Items For Sale</a></li>
  </ul>
</div>
</div>


<div class = "tab-content">
    <div id="items_to_pay_for" class="tab-pane active">
      <p>These are the items required by the clubs you belong to!</p>
      <br>
      <% @clubs.each do |club| %>
        <% club.required_items.each do |item| %>
          <% if current_user.paid_items.include?(item)  %>
            <p>Looks like you don't have any items you need to purchase</p>
          <% else %>
            <%= render "items/item_display", item: item, cart: @cart %>
          <% end %>
        <% end %>
      <% end %>
    </div>


  <div id="purchased_items" class="tab-pane ">
      <% @paid_items.each do |item| %>
        <%= render "items/item_display", item: item, cart: @cart %>
      <% end %>
  </div>



    <div id="items_for_sale" class="tab-pane ">
      <% @items_for_sale.each do |item| %>
        <%= render "items/item_display", item: item, cart: @cart %>
      <% end %>
  </div>
</div>
