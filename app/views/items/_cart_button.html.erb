
<% if current_user.items_in_cart.include?(item) %>

  <% selected_item = SelectedItem.find_by(:user_id => current_user.id, :item_id => item.id, :cart_id => cart.id)  %>

     <%= link_to "Remove from Cart",
                  selected_item_url(selected_item.id),
                  :class => "btn btn-default",
                  :method => "delete" %>


<% else %>

  <%= link_to("Add to Cart",
              selected_items_url(:user_id => current_user.id, :item_id => item.id, :cart_id => cart.id),
              :method => "post",
              :class => "btn btn-success ") %>



<% end %>
