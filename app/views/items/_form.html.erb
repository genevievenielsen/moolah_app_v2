        <%#= f.label :size, :class => "control-label" %>
          <%#= f.select(:size, options_for_select([['XS', 'XS'],
            ['S', 'S'],
            ['M', 'M'],
            ['L', 'L'],
            ['Xl', 'XL'] ], @item.category),
          :class => "form-control") %>
    </div> -->
  <%# else %>
  <%# end %>

