<!-- THE COLOR OF THE NAVBAR -->


<% if current_page?(new_user_session_url) %>
  <style type="text/css">
    .navbar-default {
      background-color: transparent;
      border-color: #ffffff
    }
    .navbar-header {
      background-color: transparent;
    }

    .navbar-default .navbar-nav>li>a, .navbar-default .navbar-nav>.active>a:active, .navbar-default .navbar-nav>li>a:hover, .navbar-default .navbar-brand, .navbar-default .navbar-brand:active, .navbar-default .navbar-brand:hover  {
      color: #ffffff;
    }

    .navbar-default .navbar-nav>li>a:active {
      border-bottom: 5px solid #d3d3d3;
    }

    /*transparent on hover */
    .navbar-default .navbar-nav>li>a:hover, .navbar-default .navbar-brand:hover  {
      background: rgba(211, 211, 211, 0.5);
    }

    .navbar_color {
      background-color: #000000;
      border-color: #ffffff;
    }

  </style>



<% else %>
  <style type="text/css">
    .navbar-default {
      background-color: #F2F2F2;
      border-color: #ffffff
    }

    .navbar-header {
      background-color: #F2F2F2;
    }

    .navbar-fixed-top {
      height: 60px;
    }

    .navbar-default .navbar-nav>.active>a {
      height: 59px;
      background-color: #f2f2f2;
      color:#777;
      border-bottom: 5px solid #777;
    }

    .navbar-default .navbar-nav>.active>a:active {
      height: 59px;
      background-color: #f2f2f2;
    }

    /*darker color on hover */
    .navbar-default .navbar-nav>li>a:hover{
      height: 59px;
      background-color: #e7e7e7;
    }

  </style>
<% end %>


