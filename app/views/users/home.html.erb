<div class="row">
  <div class="col-md-offset-4 col-md-4 col-sm-offset-4 col-sm-4">
    <div class="text-center">
      <img class="img-responsive img-circle center-block" width="100px" height="100px" src="<%= current_user.university.image %>">
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-3 pull-left">
    <div class="vertical_line"></div>
  </div>
  <div class="col-md-6 pull-left">
    <div class="text-center">
      <h1><%= current_user.university.name %></h1>
    </div>
  </div>
  <div class="col-md-3 pull-left">
     <div class="vertical_line"></div>
  </div>
</div>


  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <div class="text-center">
        <h4><i class="fa fa-map-marker"></i>&nbsp;&nbsp;<%= current_user.university.location %></h4>
      </div>
    </div>
  </div>



<div class="row sub_title_row">
  <h3 class="pull-left"><%= pluralize(@items.count, 'Item') %></h3>

   <%= link_to "New Item",
              new_item_path,
              :class => "btn btn-sm btn-primary home_button pull-right"
   %>
</div>


<div class="row">
  <% @item_count = 1  %>

  <% @items.each do |item| %>
    <% if @item_count <= 4 %>
      <% cart = Cart.where(:user_id => current_user.id, :paid => false) %>
      <% selected_item = SelectedItem.find_by(:user_id => current_user.id, :item_id => item.id, :cart => cart ) %>
      <%= render "items/item_display", item: item, selected_item: selected_item %>
    <% end %>
    <% @item_count += 1 %>
  <% end %>

  <% if @items.all.count > 4 %>
    <%= link_to "View More >>", items_path, :class => "pull-right" %>
  <% end %>
</div>

 <hr class="divider"></hr>

 <div class="row sub_title_row">
   <h3 class="pull-left"><%= pluralize(@clubs.count, 'Club') %></h3>

    <%= link_to "New Club",
               new_club_path,
               :class => "btn btn-sm btn-primary home_button pull-right"
    %>
 </div>

<div class="row">
  <% @club_count = 1  %>

  <% @clubs.each do |club| %>
    <% if @club_count <= 4 %>
      <%= render "clubs/club_display", club: club %>
    <% end %>
    <% @club_count += 1 %>
  <% end %>

  <% if @clubs.all.count > 4 %>
    <%= link_to "View More >>", clubs_path, :class => "pull-right" %>
  <% end %>
</div>


