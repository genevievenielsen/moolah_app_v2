<br>

<div class="row">
  <div class="text-center">
    <h2><%= current_user.university.name %></h2>
    <h4><i class="fa fa-map-marker"></i>&nbsp;&nbsp;<%= current_user.university.location %></h4>
  </div>
</div>



<h3><%= pluralize(@items.count, 'Item') %></h3>

<div class="row">
  <% @items.each do |item| %>
  <div class="col-sm-4 col-md-3">
    <div class="thumbnail">
      <img class="img-responsive" src="<%= item.image %>">
      <div class="caption">
      <h3><%= link_to "#{item.name}, #{item.club.name}", item %></h3>

      </div>
    </div>
  </div>
  <% end  %>
</div>


 <h3><%= pluralize(@clubs.count, 'Club') %></h3>

<div class="row">
  <% @clubs.each do |club| %>

    <div class="col-sm-4 col-md-3">
    <div class="thumbnail">
      <img class="img-responsive img-thumnail" src="<%= club.image %>">
      <div class="caption">
      <h3><%= link_to "#{club.name}", club %></h3>
      <div class="row col-offset-md-1 col-md-11 col-offset-sm-1 col-offset-sm-11">
        <%= pluralize(club.members.count, 'member') %>,
        <%= pluralize(club.items.count, 'item') %>
      </div>
      <div class="row">
         <%= render "memberships/join_button", :club => club %>
      </div>



      </div>
    </div>
  </div>

  <% end %>
</div>

<h3><%= pluralize(@users.count, 'User') %></h3>
<div class="row">
  <% @users.each do |user| %>
  <div class="col-sm-4 col-md-3">
    <div class="thumbnail">
      <img class="img-responsive" src="<%= user.image %>">
      <div class="caption">
      <h3><%= "#{user.first_name} #{user.last_name}" %></h3>

      </div>
    </div>
  </div>
  <% end  %>
</div>
